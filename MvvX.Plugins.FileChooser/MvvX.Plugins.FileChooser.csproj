<Project Sdk="MSBuild.Sdk.Extras">

  <PropertyGroup>
    <AssemblyName>MvvX.Plugins.FileChooser</AssemblyName>
    <RootNamespace>MvvX.Plugins.FileChooser</RootNamespace>
    <PackageId>MvvX.Plugins.FileChooser</PackageId>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <NeutralLanguage>en</NeutralLanguage>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>This package contains a FileChooser plugin for MvvmCross that let you select multiple files</Product>
    <ProjectGuid>{F35BF06A-B2BC-4211-B25B-C4419B5EAD2D}</ProjectGuid>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseUrl>https://github.com/mathieumack/MvvX.Plugins.FileChooser</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mathieumack/MvvX.Plugins.FileChooser</PackageProjectUrl>
    <Authors>MACK Mathieu</Authors>
    <Company></Company>
    <Description>This package contains the FileChooser plugin for MvvmCross</Description>
    <RepositoryUrl>https://github.com/mathieumack/MvvX.Plugins.FileChooser</RepositoryUrl>
    <PackageTags>mvvm;mvvmcross;xamarin;android;FileChooser;ios;mac;forms;monodroid;monotouch;xamarin.android;xamarin.ios;wpf;plugins</PackageTags>
    <PackageIconUrl />
    <Copyright>Copyright (c) 2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="platforms\**\*.cs" />
    <None Include="platforms\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <Compile Include="platforms\wpf\**\*.cs" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="MvvmCross" version="6.4.0" />
  </ItemGroup>
  
</Project>
